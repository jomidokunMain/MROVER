<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <ros2_control name="RealRobot" type="system">
        <hardware>
            <plugin>diffdrive_arduino/DiffDriveArduino</plugin>
            <param name="left_wheel_name">virtual_rear_wheel_joint</param>
            <param name="right_wheel_name">virtual_front_wheel_joint</param>
            <param name="loop_rate">30</param>
            <param name="device">/dev/ttyUSB0</param>
            <param name="baud_rate">57600</param>
            <param name="timeout">1000</param>
            <param name="enc_counts_per_rev">3436</param>
        </hardware>
        <joint name="virtual_rear_wheel_joint">
            <command_interface name="velocity">
            </command_interface>
            <state_interface name="position">
            </state_interface>
            <state_interface name="velocity"/>
        </joint>
        <joint name="virtual_front_wheel_joint">
            <command_interface name="velocity">
            </command_interface>
            <state_interface name="position">
            </state_interface>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>

    <gazebo>
        <plugin name='gazebo_ros2_control' filename='libgazebo_ros2_control.so'>
        <parameters>$(find mrover)/description/foward2Steer/config/my_controllers.yaml</parameters>
        </plugin>
    </gazebo>



</robot>